<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
        <testsuite name="Pluf">
            <directory>./tests/Downlload2/</directory>
            <directory>./tests/Header/</directory>
        </testsuite>
        <testsuite>
			<directory>tests</directory>
			<file>*Test.php</file>
		</testsuite>
    </testsuites>

	<!-- Code coverage -->
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./src</directory>
		</whitelist>
	</filter>
	<logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
	</logging>
</phpunit>